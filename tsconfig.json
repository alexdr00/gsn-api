{
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["src/**/*", "__tests__/**/*", "migrations/**/*"],
  "declaration": true,
  "typeAcquisition": {
    "enable": true
  },
  "lib": ["es2015", "es2017"]
}
